extends ../layout/index

block contenido
    .py-2
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-3xl.font-bold= pagina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.rounded-md.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-md
                form.space-y-5(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font.bold(for="email") Email de Usuario:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font.bold(for="password") Password de Usuario:
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
                    div.flex.items-center.justify-between
                        a(href="/auth/registro" class="text-gray-500 text-xs hover:text-gray-700") ¿No Tienes una Cuenta? Crea Una
                        a(href="/auth/olvide-password" class="text-gray-500 text-xs hover:text-gray-700") Olvide Mi Password
                    input(type="submit" value="Inicar Sesión" class="bg-indigo-600 w-full mt-5 p-2 text-white font-bold uppercase hover:bg-indigo-700 cursor-pointer rounded-md")